@model List<ProductsRazor.Models.Item>

@{
    ViewData["Title"] = "Products List";
}

<a asp-controller="Item" asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>

<div class="card shadow">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Serial Number</th>
                    <th>Category</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No products available.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@string.Join(", ", item.JoinTables.Select(jt => jt.Serial.SerialNumber))</td> 
                            <td>@item.IdCategoryNavigation.NameCategory</td>
                            <td class="text-end">
                                <a asp-controller= "Item" asp-action="Edit" asp-route-id="@item.IdItem" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-controller= "Item" asp-action="Delete" asp-route-id="@item.IdItem" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

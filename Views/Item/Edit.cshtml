@model ProductsRazor.Models.Item
@{
    ViewData["Title"] = "Edit Product";
}

<div class="card shadow">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdItem" />
            @Html.EditorFor(model => model, "Item")
            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller= "Item" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
